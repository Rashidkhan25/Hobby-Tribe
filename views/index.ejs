      <div class="tribe-icons">
        <img src="/images/guitar.png" class="icon guitar" />
        <img src="/images/translate.png" class="icon translate" />
        <img src="/images/chess.png" class="icon chess" />
        <img src="/images/mic.png" class="icon mic" />
        <img src="/images/laptop.png" class="icon laptop" />
        <img src="/images/colors.png" class="icon colors" />
