    <script>

        if (performance.navigation.type == 1) {
            window.onload = function () {
                setTimeout(function () {
                    $('html, body').scrollTop(0);
                    document.querySelector("nav").style.top = "0";
                }, 100); //100ms for example
            }
        }

        if (document.querySelector(".ref")) {
            const ref = document.querySelectorAll(".ref");
            for (let i = 0; i < ref.length; i++) {
                ref[i].addEventListener("click", function () {
                    if (localStorage.referred) {
                        ref[i].setAttribute("href", "/signup?referred=" + localStorage.referred);
                    } else {
                        ref[i].setAttribute("href", "/signup");
                    }
                });
            }
        }

        var useraction = document.querySelector(".user-action");

        var ua = window.navigator.userAgent;
        //var Chrome = !!ua.match(/Chrome/);
        var Moz = !!ua.match(/Firefox/) || !!ua.match(/XiaoMi/) || !!ua.match(/SamsungBrowser/) ||
            !!ua.match(/OppoBrowser/);
        var iOS = !!ua.match(/iPhone/i) || !!ua.match(/iPad/i);
        var webkit = !!ua.match(/AppleWebKit/i);
        var iOSSafari = iOS && webkit;
        if (iOSSafari) {
            for (var i = 0; i < document.querySelectorAll(".iavatar").length; i++) {
                document.querySelectorAll(".iavatar")[i].classList.remove("orientation");
            }
        } else if (Moz) {
            document.onclick = function (e) {
                if (document.querySelector(".menu") && e.target.className !== 'user-action' && e.target.className.indexOf("click")) {
                    document.querySelector(".menu").classList.remove("prof");
                }
            }
        } else {
            if (document.querySelector(".iavatar")) {
                document.querySelector(".iavatar").classList.remove("orientation");
            }
            document.onclick = function (e) {
                if (document.querySelector(".menu") && e.target.className !== 'user-action' && e.target.className.indexOf("click")) {
                    document.querySelector(".menu").classList.remove("prof");
                }
            };
        }

        if (useraction) {
            useraction.addEventListener('click', function () {
                document.querySelector(".menu").classList.toggle("prof");
            });
        }
    </script>
